pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
            	echo 'Building..'
            	sh 'pwd'
            	sh 'docker ps -a'
                sh './gradlew clean build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}